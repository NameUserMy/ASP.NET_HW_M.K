@model EditGenreViewModel

@{
    Layout = "_AdminLayOut";
}


<div class="contener-item">
    <div class="eddit-genre-contener size-contener">

        @foreach (var item in Model.Genres)
        {
            <form asp-action="ConFirm" class="card-genre-edit">
                <span class="font-settings-edit-genre">Genre</span>
                <div>
                    <input asp-for="GenreId" hidden value="@item.Id" />
                    <input asp-for="GenreTitel" class="textInput custom-input" value="@item.Title" readonly /><br />
                </div>
                <div>
                    <input class="back-color-button-Green font-color-general button-castom" type="submit" value="Confirm" />
                    <a asp-action="DeleteGenre" asp-controller="Music" asp-route-id="@item.Id"><input type="button" class="back-color-button-Red button-castom" value="Delete" /></a>

                </div>

            </form>

        }
    </div>

    <span><paginations page-action="AditGenre"  pagination-track="Model.PageViewModelGenre" parametr="page"></paginations> </span>

</div>

