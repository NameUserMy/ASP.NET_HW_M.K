            <option value="" selected="selected">Cohise categories</option>
            <option>Hard-rock</option>
        </select>
        <input class="elemet-setting" asp-for="Performer" /> 


        <label class="elemet-setting">Add album</label>
        <select class="elemet-setting" asp-for="OptionPerformer">
            <option value="" selected="selected">Cohise performer</option>
            <option>AC-DC</option>
        </select>
        <input class="elemet-setting" asp-for="Album" />
                
                <input type="button" value="Cencel" />        <input type="submit" value="Accept" />
