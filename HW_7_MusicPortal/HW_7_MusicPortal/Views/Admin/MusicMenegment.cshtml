@model GenreFormViewModel


@{
    Layout = "_AdminLayOut";
}
<div class="music-management">

    <form class="borderr form-admin font-setting-form" asp-action="AddGenre">
       
        <label class="elemet-setting">Add genre</label>
        <input class="elemet-setting" asp-for="Genre" />

        <label class="elemet-setting">Add categories</label>
        <select class="elemet-setting" asp-for="OptionGenre">
