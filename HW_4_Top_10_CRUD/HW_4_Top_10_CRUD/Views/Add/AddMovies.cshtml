@model Movie

@{

    ViewData["Title"] = "Add Movies";
    Layout = "_TenMovies";

}

<form name="uploadMovie" asp-action="UploadMovie" asp-controller="Add" method="post" enctype="multipart/form-data" class="addForm borderR boxShadow">
    <div id="posterForm" class="posterForm rowSpan borderLR">
        <span id="PosterInfo">No poster</span>
        <label id="uploadPoster" for="file-upload">
            <input id="file-upload" accept=".jpg,.png" type="file" name="uploadPoster" />
            upload
        </label>
    </div>
    <div class=" rowSpan dispalayGrid gridTempRow">
        <input asp-for="Title" placeholder="title" name="title" />
        <input asp-for="Description"placeholder="description" name="description" />
        <input asp-for="Genre" placeholder="genre" name="genre" />
        <input asp-for="Runtime"placeholder="runtime" name="runtime" />
        <input asp-for="Director"placeholder="director" name="director" />
        <input asp-for="Actors"placeholder="actors" name="actors" />
        <input asp-for="Language"placeholder="language" name="language" />
        <input type="submit" value="submit" />
    </div>
</form>
