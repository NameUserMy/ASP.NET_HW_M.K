@model ViewModelLoggin


<form asp-action="Loggin" class="FormL boxShadow borderR">
    <span class="info">
        <div asp-validation-summary="ModelOnly" class="info text-danger"></div>
    </span>

    <div class="field-group">
        <input asp-for="Login" placeholder="Login" class="info borderR" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="field-group">
        <input asp-for="Password" placeholder="Password" class="info borderR" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="field-group">
        <span>
            <input type="submit" value="Вход в систему" class="info borderR" />
        </span>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
